{
  "name": "jukebox",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:js": "esbuild ./src/root.tsx --bundle --outfile=../static/room.js",
    "build:css": "tailwindcss --input ./tailwind.css --output ../static/styles.css",
    "dev": "concurrently --kill-others \"npm run dev:js\" \"npm run dev:css\"",
    "dev:js": "esbuild ./src/root.tsx --bundle --outfile=../static/room.js --watch --sourcemap --target=chrome131",
    "dev:css": "tailwindcss --input ./tailwind.css --output ../static/styles.css --watch"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "tailwindcss": "^3.4.15"
  },
  "dependencies": {
    "format-duration": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^2.16.0",
    "react-use-websocket": "^4.11.1"
  }
}
